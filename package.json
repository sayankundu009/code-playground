{
  "name": "code-playground",
  "version": "0.1.0",
  "description": "An web coding playground",
  "author": "Sayan Kundu",
  "scripts": {
    "start": "vite preview",
    "dev": "npm-run-all --parallel dev:main dev:lib",
    "build": "npm-run-all build:lib build:main",
    "dev:main": "vite",
    "build:main": "tsc && vite build",
    "dev:lib": "rollup -c lib/rollup.config.js -w",
    "build:lib": "rollup -c lib/rollup.config.js"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.3.1",
    "@reduxjs/toolkit": "^1.8.0",
    "console-feed": "^3.3.0",
    "daisyui": "^1.21.0",
    "monaco-editor": "^0.31.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-reflex": "^4.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/linkifyjs": "^2.1.4",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-react": "^1.0.7",
    "autoprefixer": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.0.12",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  }
}
